<%= simple_form_for [forem, :admin, @forum] do |f| %>
  <%= f.association :category, :include_blank => false , :input_html => { :class => "form-control" }%>
  <%= f.input :title , :input_html => { :class => "form-control" }%>
  <%= f.input :description, :as => :text , :input_html => { :class => "form-control" }%>

  <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
  <%= f.association :moderators, :as => :check_boxes , :input_html => { :class => "form-control" } %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
