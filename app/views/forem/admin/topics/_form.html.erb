<%= simple_form_for [forem, :admin, @topic.forum, @topic] do |f| %>
  <%= f.input :subject , :input_html => { :class => "form-control" }%>
  <%= f.association :forum , :label => "Forum" , :input_html => { :class => "form-control" }%>
  <%= f.label :locked %>
  <%= f.check_box :locked , :input_html => { :class => "form-control" }%>
  <%= f.label :pinned %>
  <%= f.check_box :pinned , :input_html => { :class => "form-control" }%>
  <%= f.label :hidden %>
  <%= f.check_box :hidden , :input_html => { :class => "form-control" }%>

  <br />
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
